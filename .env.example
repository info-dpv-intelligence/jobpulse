# JobPulse Environment Variables
# Copy this file to .env and fill in your actual values

# JWT secrets
JWT_SECRET=your-very-secure-secret-your-very-secure-secret
JWT_EXPIRATION_MS=3600000
REFRESH_EXPIRATION_MS=604800000

# Database credentials
AUTH_DB_PASSWORD=your-auth-db-password
JOB_DB_PASSWORD=your-job-db-password

# Grafana Configuration (for observability stack)
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP=job-service-group
USER_EVENTS_TOPIC=user.events
USER_EVENTS_PARTITION_COUNT=3
USER_EVENTS_REPLICA_COUNT=1


# Spring profiles
SPRING_PROFILES_ACTIVE=prod

# OpenAPI Configuration (Production URLs)
OPENAPI_PROD_AUTH_URL=http://16.171.9.26:8089
OPENAPI_PROD_JOB_URL=http://16.171.9.26:8084

# OpenAPI Configuration (Development URLs)
OPENAPI_DEV_URL=http://localhost:8080