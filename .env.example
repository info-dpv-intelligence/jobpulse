# ==============================================================================
# Environment variables for development environment
#
# This file is used by docker-compose.dev.yml.
# It should be copied to a .env file and configured with your local settings.
# ==============================================================================

# --- Application Configuration ---
SPRING_PROFILES_ACTIVE=dev

# --- JWT Configuration ---
# In a real project, this should be a strong, random secret.
JWT_SECRET=your-dev-secret-your-dev-secret-your-dev-secret-your-dev-secret
JWT_EXPIRATION_MS=3600000
REFRESH_EXPIRATION_MS=604800000

# --- Kafka Configuration ---
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP=jobcreationlisting-group
USER_EVENTS_TOPIC=user.events
# These are optional Kafka settings from the auth service,
# and can be configured as needed.
USER_EVENTS_PARTITION_COUNT=3
USER_EVENTS_REPLICA_COUNT=1

# --- OpenAPI Configuration ---
# These are default values used by the services.
# The container ports are different so we should explicitly define them.
AUTH_SERVICE_OPENAPI_DEV_URL=http://localhost:8080
JOB_SERVICE_OPENAPI_DEV_URL=http://localhost:8081
# The production URL is not used in dev, so it's left empty.
OPENAPI_PROD_URL=

# --- Auth Service Database Configuration ---
# Connection details for the auth-service's PostgreSQL database.
AUTH_SERVICE_DATASOURCE_URL=jdbc:postgresql://auth-db:5432/authdb
AUTH_SERVICE_DATASOURCE_USERNAME=authuser
AUTH_SERVICE_DATASOURCE_PASSWORD=authpass

# --- Job Service Database Configuration ---
# Connection details for the jobcreationlisting service's PostgreSQL database.
JOB_SERVICE_DATASOURCE_URL=jdbc:postgresql://job-db:5432/jobdb
JOB_SERVICE_DATASOURCE_USERNAME=jobuser
JOB_SERVICE_DATASOURCE_PASSWORD=jobpass